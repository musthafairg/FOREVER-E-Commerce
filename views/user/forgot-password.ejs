<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password | Forever</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #fafafa;
            margin: 0;
            padding: 0;
        }

        /* Centered card */
        .reset-container {
            width: 420px;
            background: white;
            margin: 120px auto 60px auto;
            padding: 40px 35px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            text-align: center;
        }

        .reset-container h2 {
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 25px;
        }

        .input-wrapper {
            position: relative;
            width: 100%;
            margin-bottom: 5px;
        }

        .input-wrapper input {
            width: 90%;
            padding: 12px 45px 12px 15px;
            border-radius: 7px;
            border: 1px solid #cfcfcf;
            outline: none;
            font-size: 14px;
        }

        .input-wrapper i {
            position: absolute;
            right: 35px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #444;
        }

        /* Error Messages */
        .error-message {
            color: red;
            font-size: 13px;
            margin-bottom: 12px;
            text-align: left;
            padding-left: 5px;
            display: none;
        }

        .btn-reset {
            width: 100%;
            background: #0056d2;
            color: white;
            border: none;
            padding: 12px 0;
            border-radius: 7px;
            font-size: 15px;
            cursor: pointer;
            margin-top: 10px;
            transition: 0.2s;
        }

        .btn-reset:hover {
            background: #0049b5;
        }
    </style>
</head>

<body>

    <%- include('../partials/user/header.ejs') %>

    <section class="reset-container">
        <h2>Reset Password</h2>

        <form action="/reset-password" method="POST" id="resetForm">

            <!-- New Password -->
            <div class="input-wrapper">
                <input type="password" id="password" name="password" placeholder="New Password" required>
                <i class="fa-regular fa-eye" id="togglePass"></i>
            </div>
            <div id="errorPass" class="error-message"></div>

            <!-- Confirm Password -->
            <div class="input-wrapper">
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
                <i class="fa-regular fa-eye" id="toggleConfirm"></i>
            </div>
            <div id="errorConfirm" class="error-message"></div>

            <button type="submit" class="btn-reset">Reset Password</button>

        </form>
    </section>

    <%- include('../partials/user/footer.ejs') %>

<script>
    // Password show/hide
    const pass = document.getElementById("password");
    const confirm = document.getElementById("confirmPassword");

    document.getElementById("togglePass").onclick = () => {
        pass.type = pass.type === "password" ? "text" : "password";
    };

    document.getElementById("toggleConfirm").onclick = () => {
        confirm.type = confirm.type === "password" ? "text" : "password";
    };


    // Validation
    const errorPass = document.getElementById("errorPass");
    const errorConfirm = document.getElementById("errorConfirm");
    const form = document.getElementById("resetForm");

    function validatePassword() {
        const val = pass.value;
        const alpha = /[a-zA-Z]/;
        const digit = /\d/;

        if (val.length < 8) {
            errorPass.style.display = "block";
            errorPass.innerHTML = "Should contain at least 8 characters";
        } else if (!alpha.test(val) || !digit.test(val)) {
            errorPass.style.display = "block";
            errorPass.innerHTML = "Should contain alphabets & digits";
        } else {
            errorPass.style.display = "none";
            errorPass.innerHTML = "";
        }
    }

    function validateConfirm() {
        if (confirm.value !== pass.value) {
            errorConfirm.style.display = "block";
            errorConfirm.innerHTML = "Passwords do not match";
        } else {
            errorConfirm.style.display = "none";
            errorConfirm.innerHTML = "";
        }
    }

    // Live validation events
    pass.addEventListener("input", validatePassword);
    confirm.addEventListener("input", validateConfirm);

    // Block submit if errors
    form.addEventListener("submit", (e) => {
        validatePassword();
        validateConfirm();

        if (errorPass.innerHTML || errorConfirm.innerHTML) {
            e.preventDefault();
        }
    });
</script>

</body>
</html>
