                }),
            });

            const data = await res.json();
            console.log("Delete image response:", data);

            if (data.status === true) {
                window.location.reload();
            } else {
                alert(data.message || "Failed to delete image");
            }
        } catch (err) {
            console.error("Error calling deleteImage:", err);
            alert("Error deleting image");
        }
    }
